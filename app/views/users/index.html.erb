  <div class="container px-5 px-sm-0">

		<div class="row">
			<div class="col-md-3">
				<%= render 'users/user_show', user: @user %>
				<%= render 'books/book_new', book: @book %>
			</div>
		
		<div class="col-md-8 offset-md-1">
		<h1>ユーザー検索</h1>
			<%= search_form_for @q, url: search_users_path do |f| %>
				<%= f.label :name_cont, 'ユーザー名' %>
				<%= f.search_field :name_cont %>
				<br>
				<%= f.submit '検索' %>
			<% end %>
		
			<h1>Users</h1>
			
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><p><%= image_tag user.get_profile_image(40,40) %></p></td>
						<td><p><%= user.name %></p></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
			
		</div>
		</div>
	</div>